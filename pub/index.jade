doctype
html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Food-mobile!
		style !{css}
	body
		div#top
			div#top-left
				div.top-col.top-col-m: input#top-text(type="text", placeholder="everything")
				div.top-col.top-col-l Find
				div.top-col.top-col-r: select#top-type
					option(value="") any type
					each t in types
						option(value=t) #{t}
			
			div#top-right
				div.top-col.top-col-m: input#top-address(type="text", placeholder="San Francisco, CA")
				div.top-col.top-col-l Near
				div.top-col.top-col-r#top-distance
					button(data-distance="0.5") walk
					button(data-distance="1.5") bike
					button(data-distance="4.5", disabled) drive
		
		div#map
			div#map-inner
		
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			
			ga('create', '#{gaid}', 'tkaz.ec');
			ga('send', 'pageview');
		script(src="http://maps.google.com/maps/api/js?sensor=true")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/gmaps.js/0.4.5/gmaps.min.js")
		script var labels = !{JSON.stringify(labels)}; !{js}